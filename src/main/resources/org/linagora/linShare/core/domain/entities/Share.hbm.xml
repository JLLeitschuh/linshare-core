<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <class name="org.linagora.linShare.core.domain.entities.Share" table="Share">
    <id access="field" name="persistenceId" type="long">
      <column name="share_id"/>
      <generator class="native"/>
    </id>
    <many-to-one access="field" class="org.linagora.linShare.core.domain.entities.Document" name="document" not-null="true">
      <column index="index_share_document_id" name="document_id"/>
    </many-to-one>
    <many-to-one access="field" class="org.linagora.linShare.core.domain.entities.User" name="sender" not-null="true">
      <column index="index_share_sender_id" name="sender_id"/>
    </many-to-one>
    <many-to-one access="field" class="org.linagora.linShare.core.domain.entities.User" name="receiver" not-null="true">
      <column index="index_share_recipient_id" name="recipient_id"/>
    </many-to-one>
    <property access="field" index="index_share_expiration_date" name="expirationDate" type="calendar">
      <column name="expiration_date"/>
    </property>
    <property access="field" column="shareActive" name="shareActive"/>
    <property access="field" column="downloaded" name="downloaded"/>
    <property access="field" column="comment" name="comment" type="text"/>
  </class>
</hibernate-mapping>
