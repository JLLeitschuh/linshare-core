<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<t:container
	xmlns:t="http://tapestry.apache.org/schema/tapestry_5_0_0.xsd">

	<div style="display: none">
		
		<t:zone t:id="createGroupTemplateZone" t:zone="createGroupZone">

		<h2>${message:pages.groups.create}</h2>


		<t:form t:id="createGroupForm">
        	<t:errors  banner="message:pages.user.edit.errorBanner"  />
		<hr />
<!--			<div class="number-hidden" />-->
				<t:label class="edit-form-label" for="groupName">${message:pages.groups.info.name}</t:label>
<!--				<t:textfield class="edit-form-field" t:id="groupName" row="1" validate="required, regexp=^[A-Za-z][A-Za-z0-9]*$"/>-->
				<t:textfield class="edit-form-field" t:id="groupName" row="1" validate="required, regexp=^[a-zA-Z]([a-zA-Z0-9_.-])+$"/>
<!--				<t:textfield class="edit-form-field" t:id="groupName" row="1" />-->
            <br/>
				<t:label class="edit-form-label" for="groupDescription">${message:pages.groups.info.description}</t:label>
				<t:textarea class="edit-form-field" t:id="groupDescription" row="5" />
            <br/>
				<t:label class="edit-form-label" for="groupFunctionalEmail">${message:pages.groups.info.functionalEmail}</t:label>
				<t:textfield class="edit-form-field" t:id="groupFunctionalEmail" />
            <br/>
				<div class="clear" />
			
			<hr />

			<div class="button"><t:linkSubmit class="button">
				<span><img
					src="${asset:context:images/icons/create-group-mini.png}" alt="" />
				${message:global.button.add}</span>
			</t:linkSubmit> <a href="#" onclick="createGroupWindow.close();" class="button"><span><img
				src="${asset:context:images/icons/cancel.png}" alt="" />
			${message:global.button.cancel}</span></a></div>
		</t:form>
	</t:zone></div>
	
		<t:block t:id="onFailureCreateGroup">
          	<script type="text/javascript">
	       		new Effect.Shake('${JSONid}');
	       	</script>
        </t:block>
        
        <t:block t:id="onSuccessCreateGroup">
          	<script type="text/javascript">
	       		location.reload(true);
	       	</script>
        </t:block>
        
	<div t:id="createGroupWindow"><t:zone t:id="createGroupZone"
		update="show" /></div>

</t:container>
