<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<t:container xmlns:t="http://tapestry.apache.org/schema/tapestry_5_0_0.xsd">
    <div class="sharePanelComponent">
        <t:sharePanel listObject="users" columns="firstName, lastName" label="${message:component.shareSummary.users.title}"/>
    </div>
    <div class="sharePanelComponent">
        <t:sharePanel listObject="documents" columns="name" label="${message:component.shareSummary.users.title}"/>
    </div>
    <fieldset>
        <legend>plop</legend>
        <t:form>
            <textarea>plop</textarea>
            <t:submit value="${message:component.shareSummary.validate}"/> &nbsp;
            <t:submit value="${message:component.shareSummary.cancel}" t:event="cancel"/>
        </t:form>
    </fieldset>
</t:container>