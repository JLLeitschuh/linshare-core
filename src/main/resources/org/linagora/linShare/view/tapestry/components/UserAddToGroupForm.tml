<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<t:container xmlns:t="http://tapestry.apache.org/schema/tapestry_5_0_0.xsd">
    <div id="userAddToGroupFormComponent">
            
		<h2>${message:components.addToGroup.title}</h2>

		<hr />
			
    	<div class="memberList">
    	<t:grid t:source="newMemberList" include="login">
				<t:parameter t:name="empty">
		            ${message:components.addToGroup.newMemberList.empty}
				</t:parameter>
				<t:parameter t:name="loginHeader">
					${message:components.addToGroup.newMemberList.login.title}
				</t:parameter>
			</t:grid>
	    </div>
	    
        <t:form t:id="userAddToGroup">
            <t:errors/>
    		<p>${message:components.addToGroup.info}</p>

			<t:grid t:id="groupsSelected" source="groupsAllowed" row="groupSelected" 
				exclude="groupLogin, groupOwner, description" add="selectedValue">

			<t:parameter t:name="empty">
				<br /><strong>${message:pages.groups.info.empty}</strong>
			</t:parameter>

			<t:parameter t:name="nameHeader">
				${message:pages.groups.info.name}
			</t:parameter>

			<t:parameter t:name="ownerLoginHeader">
				${message:pages.groups.members.type.owner}
			</t:parameter>

			<t:parameter t:name="selectedValueHeader">
			</t:parameter>
				<t:parameter name="selectedValueCell">
					<t:checkbox t:id="selected" />
				</t:parameter>		
			</t:grid>
			
<!--			<t:label for="type"/>:-->
<!--   				<t:select t:id="type" exlude="owner"/>-->

			<hr />

			<div class="button">
				<button type="submit" class="button">
                	<span><img src="${asset:context:images/icons/add-member.png}" alt=""/> ${message:global.button.add}</span>
                </button>
				<button onclick="userAddToGroupWindow.close();" class="button"><span><img src="${asset:context:images/icons/cancel.png}" alt=""/> ${message:global.button.cancel}</span></button>
			</div>

        </t:form>
    </div>
</t:container>