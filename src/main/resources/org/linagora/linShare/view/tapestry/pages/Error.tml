<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<t:MyBorderLayout t:title="message:pages.error.title" t:identifier="error"
	xmlns:t="http://tapestry.apache.org/schema/tapestry_5_0_0.xsd">

	<!-- Main content -->

	<div id="content">

		<div id="pageContent">

			<t:if t:test="auth">
				<div class="errorTitle">
					${message:pages.error.badAuth.title}
				</div>
				<div class="errorMessage">
					${message:pages.error.badAuth.message}
				</div>
			</t:if>

		</div>

	</div><!-- id="content" -->
	
</t:MyBorderLayout>
