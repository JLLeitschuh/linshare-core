<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<t:MyBorderLayout t:title="message:pages.administration.domains.index.createdomain.index" t:identifier="administration" t:currentHighlight="administration"
	xmlns:t="http://tapestry.apache.org/schema/tapestry_5_0_0.xsd" xmlns:p="tapestry:parameter">

	<!-- Main content -->

	<div id="content">

		<h1>${message:pages.administration.domains.index.createdomain.index}</h1>
		
		<t:messagePanel />	
		
		<div id="pageContent">
		
			<t:actionLink t:id="cancel">${message:global.button.cancel}</t:actionLink>
			
			<t:beanEditForm t:object="domain" submitlabel="message:global.button.validate"
				add="pattern, connection">
				<p:identifier>                
					<t:label for="identifier"/>
                	<t:textfield t:id="identifier" value="domain.identifier" disabled="inModify"/>
				</p:identifier>
				<p:pattern>                
					<t:label for="pattern"/>
                	<t:select t:id="pattern" t:value="domain.pattern" t:model="patterns" t:encoder="patternValueEncoder" blankOption="never" />
				</p:pattern>
				<p:connection>                
					<t:label for="connection"/>
                	<t:select t:id="connection" t:value="domain.ldapConnection" t:model="connections" t:encoder="connectionValueEncoder" blankOption="never" />
				</p:connection>
			</t:beanEditForm>

		</div>

	</div><!-- id="content" -->

</t:MyBorderLayout>
