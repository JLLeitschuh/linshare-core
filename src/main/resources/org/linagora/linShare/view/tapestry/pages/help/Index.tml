<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<t:MyBorderLayout t:title="message:pages.help.title" t:identifier="help" t:currentHighlight="help"
	xmlns:t="http://tapestry.apache.org/schema/tapestry_5_0_0.xsd">

<t:if test="${showHelp}">
	<!-- Main content -->

	<div id="content">

		<h1>${message:components.myborderlayout.help.title}</h1>
		<t:messagePanel />
		<div id="pageContent">
			<div class="helpPageContent">
			<p>${message:pages.help.description} <a href="${message:pages.help.link.url}" title="${message:pages.help.link.title}">${message:pages.help.link.content}</a></p>


			<div id="helpHome">
			<dl>

			<dt>${message:pages.help.manual.user.title}</dt>
			<dd>${message:pages.help.manual.user.link.message} <a href="${message:pages.help.manual.user.link.url}" title="${message:pages.help.manual.user.link.title}" target="_blank">${message:pages.help.manual.user.link.url}</a></dd>
			
<t:linkit.Comment>

				<dd><t:helpLauncher t:video="false" class="main text" t:role="user" t:idSection="10overview" t:title="${message:help.manual.user.10overview.title}" t:descItems="1,11,1,5,4,3" />
					<span class="alt">${message:pages.help.manual.text.only}</span></dd>

				<dd><t:helpLauncher t:video="true" class="main video" t:role="user" t:idSection="11quickShare" t:title="${message:help.manual.user.11quickShare.title}" t:videoExtension="swf" />
					<t:helpLauncher t:video="false" class="alt" t:role="user" t:idSection="11quickShare" t:title="${message:pages.help.manual.text.link}" t:descItems="2,1,1,2,1,1" /></dd>

				<dd><t:helpLauncher t:video="true" class="main video" t:role="user" t:idSection="20fileUpload" t:title="${message:help.manual.user.20fileUpload.title}" t:videoExtension="swf" />
					<t:helpLauncher t:video="false" class="alt" t:role="user" t:idSection="20fileUpload" t:title="${message:pages.help.manual.text.link}" t:descItems="1,1,1" /></dd>

				<dd><t:helpLauncher t:video="true" class="main video" t:role="user" t:idSection="22fileShare" t:title="${message:help.manual.user.22fileShare.title}" t:videoExtension="swf" />
					<t:helpLauncher t:video="false" class="alt" t:role="user" t:idSection="22fileShare" t:title="${message:pages.help.manual.text.link}" t:descItems="3,2,1,2,2,1" /></dd>

				<dd><t:helpLauncher t:video="true" class="main video" t:role="user" t:idSection="30userAdd" t:title="${message:help.manual.user.30userAdd.title}" t:videoExtension="swf" />
					<t:helpLauncher t:video="false" class="alt" t:role="user" t:idSection="30userAdd" t:title="${message:pages.help.manual.text.link}" t:descItems="2,1,2" /></dd>

				<dd><t:helpLauncher t:video="false" class="main text" t:role="user" t:idSection="31userSearch" t:title="${message:help.manual.user.31userSearch.title}" t:descItems="1,0" />
					<span class="alt">${message:pages.help.manual.text.only}</span></dd>

				<dd><t:helpLauncher t:video="true" class="main video" t:role="user" t:idSection="40signatureCreation" t:title="${message:help.manual.user.40signatureCreation.title}" t:videoExtension="swf" />
					<t:helpLauncher t:video="false" class="alt" t:role="user" t:idSection="40signatureCreation" t:title="${message:pages.help.manual.text.link}" t:descItems="2,2,2,1,2" /></dd>


				<dd><t:helpLauncher t:video="false" class="main text" t:role="user" t:idSection="41signatureRead" t:title="${message:help.manual.user.41signatureRead.title}" t:descItems="0" />
					<span class="alt">${message:pages.help.manual.text.only}</span></dd>

				<dd><t:helpLauncher t:video="false" class="main text" t:role="user" t:idSection="42fileEncrypt" t:title="${message:help.manual.user.42fileEncrypt.title}" t:descItems="2,3,1,1,1,1" />
					<span class="alt">${message:pages.help.manual.text.only}</span></dd>
					
				<dd><t:helpLauncher t:video="false" class="main text" t:role="user" t:idSection="21fileSearch" t:title="${message:help.manual.user.21fileSearch.title}" t:descItems="0" />
					<span class="alt">${message:pages.help.manual.text.only}</span></dd>

				<dd><t:helpLauncher t:video="false" class="main text" t:role="user" t:idSection="23fileCopy" t:title="${message:help.manual.user.23fileCopy.title}" t:descItems="0" />
					<span class="alt">${message:pages.help.manual.text.only}</span></dd>

				<dd><t:helpLauncher t:video="false" class="main text" t:role="user" t:idSection="50history" t:title="${message:help.manual.user.50history.title}" t:descItems="1" />
					<span class="alt">${message:pages.help.manual.text.only}</span></dd>

				<dd><t:helpLauncher t:video="false" class="main text" t:role="user" t:idSection="51userConfiguration" t:title="${message:help.manual.user.51userConfiguration.title}" t:descItems="1" />
					<span class="alt">${message:pages.help.manual.text.only}</span></dd>

				<dd><t:helpLauncher t:video="false" class="main text" t:role="user" t:idSection="90tipsAndTricks" t:title="${message:help.manual.user.90tipsAndTricks.title}" t:descItems="1,1,1,1" />
					<span class="alt">${message:pages.help.manual.text.only}</span></dd>
</t:linkit.Comment>

			<t:if t:test="userAdmin">
			<dt>${message:pages.help.manual.admin.title}</dt>
			<dd>${message:pages.help.manual.admin.link.message} <a href="${message:pages.help.manual.admin.link.url}" title="${message:pages.help.manual.admin.link.title}" target="_blank">${message:pages.help.manual.admin.link.url}</a></dd>
			
<t:linkit.Comment>
				<dd><t:helpLauncher t:video="false" class="main text" t:role="admin" t:idSection="10overview" t:title="${message:help.manual.admin.10overview.title}" t:descItems="2,4,1" />
					<span class="alt">${message:pages.help.manual.text.only}</span></dd>

				<dd><t:helpLauncher t:video="false" class="main text" t:role="admin" t:idSection="20configuration" t:title="${message:help.manual.admin.20configuration.title}" t:descItems="2,2,2,2,3,2" />
					<span class="alt">${message:pages.help.manual.text.only}</span></dd>

				<dd><t:helpLauncher t:video="false" class="main text" t:role="admin" t:idSection="21audit" t:title="${message:help.manual.admin.21audit.title}" t:descItems="1" />
					<span class="alt">${message:pages.help.manual.text.only}</span></dd>
</t:linkit.Comment>
			</t:if>

			<dt>${message:pages.help.support.title}</dt>
			<dd>${message:pages.help.manual.support.link.message} <a href="${message:pages.help.manual.support.link.url}" title="${message:pages.help.manual.support.link.title}" target="_blank">${message:pages.help.manual.support.link.url}</a></dd>

<t:linkit.Comment>
				<dd class="support"><a class="main faq" href="help/faq" title="${message:pages.help.support.faq.link.title}">${message:pages.help.support.faq.link}</a></dd>

				<dd class="support"><a class="main email" href="mailto:${message:pages.help.support.email.address}" title="${message:pages.help.support.email.link.title}">${message:pages.help.support.email.link}</a></dd>

</t:linkit.Comment>

			</dl>

			<div class="clear"></div>

			</div><!-- id="helpHome" -->


		</div>
		</div>
	</div><!-- id="content" -->
	
    <t:parameter name="else">
        <div id="content">
            <p>${message:pages.help.message.notActivated}</p>
        </div>
    </t:parameter>
</t:if>
</t:MyBorderLayout>
