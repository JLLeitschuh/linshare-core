<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<typedef
		class="org.linagora.linshare.core.repository.hibernate.type.GenericEnumType" name="customisationType">
		<param name="enumClass">org.linagora.linshare.core.domain.constants.CustomisationType</param>
		<param name="identifierMethod">name</param>
		<param name="valueOfMethod">valueOf</param>
	</typedef>
	<typedef
		class="org.linagora.linshare.core.repository.hibernate.type.GenericEnumType" name="languageType">
		<param name="enumClass">org.linagora.linshare.core.domain.constants.Language</param>
		<param name="identifierMethod">name</param>
		<param name="valueOfMethod">valueOf</param>
	</typedef>
	<class name="org.linagora.linshare.core.domain.entities.Customisation" table="customisation" lazy="false">
		<id name="id" column="id" type="long" unsaved-value="0">
			<generator class="native">
			</generator>
		</id>
		<property name="uuid" column="uuid" unique="true" type="string" length="255" not-null="true" lazy="false"/>
		<property name="name" column="name" type="string" length="255" not-null="true" lazy="false"/>
		<property name="description" column="description" type="text" not-null="true" lazy="false"/>
		<property name="creationDate" column="creation_date" type="timestamp" not-null="true" lazy="false"/>
		<property name="modificationDate" column="modification_date" type="timestamp" not-null="true" lazy="false"/>
		<property name="customType" column="custom_type" type="customisationType" length="255" not-null="true" lazy="false"/>
		<set name="abstractDomain" table="domain_abstract_customisation" lazy="true" cascade="save-update,lock" inverse="false">
			<key column="customisation_id" not-null="true"/>
			<many-to-many column="domain_abstract_id" class="org.linagora.linshare.core.domain.entities.AbstractDomain">
			</many-to-many>
		</set>
		<map name="customisationEntries" lazy="true" cascade="all" inverse="false">
			<key column="customisation_id" not-null="true" />
			<map-key column="lang" type="languageType" />
			<one-to-many
				class="org.linagora.linshare.core.domain.entities.CustomisationEntry" />
		</map>
	</class>
</hibernate-mapping>