<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <!--  
    <property access="field" column="creation_date" name="creationDate" not-null="true" type="calendar"/>
     <property access="field" column="expiration_date" index="index_document_expiration_date" name="expirationDate" not-null="true" type="calendar"/>
    <property access="field" column="deletion_date" name="deletionDate" type="calendar"/>
     -->
	<class name="org.linagora.linshare.core.domain.entities.Document" table="document" lazy="false">
		<id name="id" type="long" unsaved-value="0">
      		<column name="id" not-null="true" index="index_document_id"/>
      		<generator class="native"/>
    	</id>
		<property name="identifier" column="identifier" index="document3" type="string" length="255" not-null="true" lazy="false"/>
		<property name="creationDate" column="creation_date" type="calendar" not-null="true" lazy="false"/>
		<property name="type" column="type" type="string" length="255" not-null="true" lazy="false"/>
		<property name="size" column="size" type="long" not-null="true" lazy="false"/>
		<property name="thmbUuid" column="thmb_uuid" type="string" length="255" not-null="false" lazy="false"/>
		<property access="field" column="timestamp" name="timeStamp" type="binary" length="65535"/>
		<!-- 
		<set name="threadEntries" lazy="true" cascade="save-update,lock" inverse="true">
			<key column="document_id" not-null="true"/>
			<one-to-many class="org.linagora.linshare.core.domain.entities.ThreadEntry"/>
		</set>
		<set name="documentEntries" lazy="true" cascade="save-update,lock" inverse="true">
			<key column="document_id" not-null="true"/>
			<one-to-many class="org.linagora.linshare.core.domain.entities.DocumentEntry"/>
		</set>
		 -->
		 <one-to-one name="threadEntry" class="org.linagora.linshare.core.domain.entities.ThreadEntry" cascade="save-update,lock" property-ref="document" lazy="no-proxy"/>
		 <one-to-one name="documentEntry" class="org.linagora.linshare.core.domain.entities.DocumentEntry" cascade="save-update,lock" property-ref="document" lazy="no-proxy"/>
	</class>
	
</hibernate-mapping>
