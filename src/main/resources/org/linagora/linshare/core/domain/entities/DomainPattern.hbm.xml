<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <class name="org.linagora.linshare.core.domain.entities.DomainPattern" table="DOMAIN_PATTERN">
    <id name="persistenceId" type="long">
    	<column name="domain_pattern_id" not-null="true" index="index_domain_pattern_id"/>
      	<generator class="native"/>
    </id>
    <property access="field" column="identifier" index="index_domain_pattern_identifier" name="identifier" not-null="true" unique="true"/>
    <property access="field" column="description" name="description"/>
    <property access="field" column="auth_command" name="authCommand" not-null="true"/>
    <property access="field" column="search_user_command" name="searchUserCommand" not-null="true"/>
    <property access="field" column="auto_complete_command" name="autoCompleteCommand" not-null="true"/>
    <property access="field" column="system" name="system"/>
    <map name="attributes" lazy="true" cascade="all" inverse="false">
        <key column="domain_pattern_id" not-null="false"/>
        <map-key  column="field" type="string"/>
        <one-to-many class="org.linagora.linshare.core.domain.entities.LdapAttribute"/>
    </map>
  </class>
</hibernate-mapping>
