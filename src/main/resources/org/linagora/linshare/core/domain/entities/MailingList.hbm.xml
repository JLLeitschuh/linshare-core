<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping default-access="field" package="org.linagora.linshare.core.domain.entities">

<class name="MailingList" table="mailing_list" lazy="false">
		<id name="persistenceId" type="long">
			<column name="id" not-null="true"/>
			<generator class="native" />
		</id>
	
	<property access="field" name="isPublic" column="is_public" type="boolean" not-null="true" lazy="false"/>
	<property access="field" name="identifier" column="identifier" type="string" length="255" not-null="true" lazy="false"/>
	<property access="field" name="description" column="description" type="text" not-null="true" lazy="false"/>
	<array name="mails" table="mailing_list_contact" cascade="all">
		<key column="mailing_list_id"/>
		<index column="id" type="integer"/>
		<element column="mail" type="string" length="255"/>
	</array>
	
	<many-to-one name="domain" class="org.linagora.linshare.core.domain.entities.AbstractDomain"
	column="domain_abstract_id"  lazy="no-proxy" cascade="lock"></many-to-one>
	<many-to-one name="owner" class="org.linagora.linshare.core.domain.entities.User"
	cascade="lock" column="user_id"   lazy="no-proxy"></many-to-one>

</class>
</hibernate-mapping>