<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<typedef
		class="org.linagora.linshare.core.repository.hibernate.type.GenericEnumType" name="statisticType">
		<param name="enumClass">org.linagora.linshare.core.domain.constants.StatisticType</param>
		<param name="identifierMethod">name</param>
	</typedef>
	<class name="org.linagora.linshare.core.domain.entities.StatisticByDomain"
		table="statistique_by_domain" lazy="true">
		<id name="id" column="id" type="long" unsaved-value="0">
			<generator class="native">
			</generator>
		</id>
		<discriminator column="statistique_type" type="string" />
		<property name="creationDate" column="creation_date" type="date" />
		<property name="operationCount" column="operation_count"
			type="long" not-null="true" />
		<property name="deleteOperationCount" column="delete_operation_count"
			type="long" />
		<property name="addOperationCount" column="add_operation_count"
			type="long" />
		<property name="addOperationSum" column="add_operation_sum"
			type="long" />
		<property name="deleteOperationSum" column="delete_operation_sum"
			type="long" />
		<property name="diffOperationSum" column="diff_operation_sum"
			type="long" />
		<property name="actualOperationSum" column="actual_operation_sum"
			type="long" />
		<property name="statisticType" column="statistique_type"
			type="statisticType" insert="false" update="false"/>

		<many-to-one name="domain" column="domain_id"
			class="org.linagora.linshare.core.domain.entities.AbstractDomain"
			not-null="true">
		</many-to-one>
		<many-to-one name="parentDomain" column="parent_domain_id"
			class="org.linagora.linshare.core.domain.entities.AbstractDomain">
		</many-to-one>
		<subclass name="org.linagora.linshare.core.domain.entities.DailyStatByDomain" discriminator-value="DAILY_STAT" lazy="true">
		</subclass>
		<subclass name="org.linagora.linshare.core.domain.entities.WeeklyStatByDomain" discriminator-value="WEEKLY_STAT" lazy="true">
		</subclass>
		<subclass name="org.linagora.linshare.core.domain.entities.MonthlyStatByDomain" discriminator-value="MONTHLY_STAT" lazy="true">
		</subclass>
	</class>
</hibernate-mapping>