<t:container
	xmlns:t="http://tapestry.apache.org/schema/tapestry_5_0_0.xsd">
    <div id="searchBar">
        <form t:id="form" class="form-search text-center">
            <div class="input-append">
                <t:searchfield t:id="value" placeholder="${placeholder}" class="span7 search-query"/>
                <button type="submit" class="btn"><i class="icon-search"/></button>
            </div>
        </form>
    </div>
</t:container>
