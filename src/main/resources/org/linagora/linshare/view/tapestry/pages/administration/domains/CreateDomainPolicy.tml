	<!-- Main content -->
	
	<div id="content">

		<h1>${message:pages.administration.domains.index.createdomainpolicy.index}</h1>
		
		<t:messagePanel />	
		
		<div id="pageContent">
			
			
			<!-- FORM -->

				<t:beanEditForm t:id="form" t:object="domainPolicy" cancel="true" submitlabel="message:global.button.validate">
