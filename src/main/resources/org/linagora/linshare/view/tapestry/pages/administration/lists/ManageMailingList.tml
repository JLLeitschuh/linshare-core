<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<t:MyBorderLayout t:title="message:pages.administration.lists.index" t:identifier="lists" t:currentHighlight="lists"
	xmlns:t="http://tapestry.apache.org/schema/tapestry_5_0_0.xsd" xmlns:p="tapestry:parameter">
	
	<!-- Main content -->
			
		<div id="content">
			
				<h1>${mailingList.identifier}</h1>
		<br></br>
		<t:actionLink t:id="cancel">${message:global.button.cancel}</t:actionLink>
		<br></br><br></br>
			<!-- FORM -->
		<t:form id="form">
		 <t:errors/>
			<fieldset class="title_criteria_zone" id="searchCriterion">
			<legend align="top" class="palette">${message:pages.lists.owner}</legend>
				<p><t:label for="identifier"/>:&nbsp;
        		<t:textfield t:id="identifier" value="mailingList.identifier" validate="required"/></p>
			     <br></br>
				<p>${message:pages.lists.currentOwner}:  ${mailingList.owner.firstName} ${mailingList.owner.lastName}</p>
        		<p><t:label for="owner"/>&nbsp;
            	<t:textfield t:id="owner" t:value="newOwner" t:mixins="autocomplete" t:size="30" t:minChars="${autocompleteMin}" class="userSearchPattern"/></p>
        		<br></br>
        		<input type="submit"  value="${message:global.button.validate}"/>
			</fieldset>
        </t:form>         
        
		</div><!-- id="content" -->
		
	</t:MyBorderLayout>