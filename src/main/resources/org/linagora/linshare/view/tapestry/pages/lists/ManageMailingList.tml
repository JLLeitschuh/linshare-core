<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<t:MyBorderLayout t:title="message:pages.administration.lists.index" t:identifier="thread" t:currentHighlight="lists"
	xmlns:t="http://tapestry.apache.org/schema/tapestry_5_0_0.xsd" xmlns:p="tapestry:parameter">
	
	<!-- Main content -->
			
		<div id="content">
			
		<t:if test="inModify">
				<h1>${mailingList.identifier}</h1>
			<p:else>
				<h1>${message:pages.lists.createList}</h1>
			</p:else>
		</t:if>
		
				
		<t:actionLink t:id="cancel">${message:global.button.cancel}</t:actionLink>
		<br></br>
		
			<!-- FORM -->
					
           
		<t:form id="form">
		 <t:errors banner="${message:pages.administration.userconfig.password.error}"/>
			<fieldset class="title_criteria_zone" id="listCriterion">
				<t:if test="inModify">
					<legend align="top" class="palette">${message:global.button.update}</legend>
				<p:else>
					<legend align="top" class="palette">${message:pages.lists.createList}</legend>
					<br></br>
				</p:else>
				</t:if>
			<table>
				<tr>
					<td>
						<t:label for="identifier"/>:&nbsp;
					</td>
					<td>
        				<t:textfield t:id="identifier" value="mailingList.identifier" validate="required"/>
        			</td>
        		</tr>
        		<tr>
					<td HEIGHT="50">
						<t:label for="listDescription"/>:&nbsp;
					</td>
					<td  HEIGHT="50">
        				<t:textarea t:id="listDescription" value="mailingList.description" cols="40" rows="2"/>
        			</td>
        		</tr>	
        		<tr>
        			<td>
        			   <t:if test="inModify">
            				${message:pages.lists.currentVisibility}: ${currentVisibility}
            		   </t:if>
            		</td>
        		</tr>	
            	<tr>
        			<td>	 
        				<t:label for="visibility"/>:&nbsp;
        			</td>
        			<td>
        				<select t:type="select" t:id="visibility"></select>
        			</td>
        		</tr>	
            	<tr>
        			<td HEIGHT="30">	
        				<input type="submit"  value="${message:global.button.validate}"/>
        			</td>
        	    </tr>
        </table>
		</fieldset>
        </t:form>         
        
		</div><!-- id="content" -->
		
	</t:MyBorderLayout>