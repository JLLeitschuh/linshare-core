<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<t:MyBorderLayout t:title="message:pages.administration.lists.index" t:identifier="lists" t:currentHighlight="lists"
	xmlns:t="http://tapestry.apache.org/schema/tapestry_5_0_0.xsd" xmlns:p="tapestry:parameter">
	
	<!-- Main content -->
			
		<div id="content">
			
		<t:if test="inModify">
				<h1>${mailingList.identifier}</h1>
			<p:else>
				<h1>${message:pages.lists.createList}</h1>
			</p:else>
		</t:if>
		
			<!-- FORM -->
			
		<t:actionLink t:id="cancel">${message:global.button.cancel}</t:actionLink>
		<t:form id="form">
		<br></br>
		<p><t:label for="identifier"/>:&nbsp;
        <t:textfield t:id="identifier" value="mailingList.identifier" Disabled="inModify"/></p>
		<br></br>			
		<p><t:label for="listDescription"/>:&nbsp;
        <t:textarea t:id="listDescription" value="mailingList.listDescription" cols="40" rows="1"/></p>
        <br></br>
        <p><t:label for="visibilitySelection"/>:&nbsp;
        <select t:type="select" t:id="visibilitySelection" t:model="literal:Private,Public"></select></p>
        <br></br>	
        <p><input type="submit"  value="${message:global.button.validate}"/></p>
        </t:form>         
		
		</div><!-- id="content" -->
		
	</t:MyBorderLayout>