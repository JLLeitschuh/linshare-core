<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<t:MyBorderLayout t:title="message:pages.administration.lists.index" t:identifier="lists" t:currentHighlight="lists"
	xmlns:t="http://tapestry.apache.org/schema/tapestry_5_0_0.xsd" xmlns:p="tapestry:parameter">
	
	<!-- Main content -->
			
		<div id="content">
			
		<t:if test="inModify">
				<h1>${mailingList.identifier}</h1>
			<p:else>
				<h1>${message:pages.lists.createList}</h1>
			</p:else>
		</t:if>
		
				
		<t:actionLink t:id="cancel">${message:global.button.cancel}</t:actionLink>
		<br></br>
		
			<!-- FORM -->
					
           
		<t:form id="form">
		 <t:errors banner="${message:pages.administration.userconfig.password.error}"/>
			<fieldset class="title_criteria_zone" id="listCriterion">
				<t:if test="inModify">
					<legend align="top" class="palette">${message:global.button.update}</legend>
				<p:else>
					<legend align="top" class="palette">${message:pages.lists.createList}</legend>
					<br></br>
				</p:else>
				</t:if>
			<p><t:label for="identifier"/>:&nbsp;
        	<t:textfield t:id="identifier" value="mailingList.identifier" validate="required"/></p>
		<br></br>			
			<p><t:label for="listDescription"/>:&nbsp;
        	<t:textarea t:id="listDescription" value="mailingList.listDescription" cols="40" rows="1"/></p>
        <br></br>
            <t:if test="inModify">
            <p>${message:pages.lists.currentVisibility}: ${currentVisibility}</p>
            </t:if>
        	<t:label for="visibility"/>:&nbsp;
        	<select t:type="select" t:id="visibility"></select>
             <div class="clear"></div>		
        	<p><input type="submit"  value="${message:global.button.validate}"/></p>
		</fieldset>
        </t:form>         
        
		</div><!-- id="content" -->
		
	</t:MyBorderLayout>