<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<t:MyBorderLayout t:title="message:pages.thread.index.title" t:identifier="thread" t:currentHighlight="thread"
        xmlns:t="http://tapestry.apache.org/schema/tapestry_5_0_0.xsd"
        xmlns:p="tapestry:parameter">

    <!-- Main content -->
    <div id="content">

        <h1>${message:pages.thread.index.title}</h1>

        <t:messagePanel />
        <t:businessMessagesDisplayer />


        <!-- Action bar -->

        <div id="actionBar">
            <h4>Actions</h4>
            <ul>
                <li>
                <t:if test="showCreateButton">
                    <t:pageLink page="thread/CreateThread" class="button" title="${message:pages.thread.index.addbutton}">
                        <span><img src="${asset:context:images/icons/create-group-mini.png}" alt="" /> ${message:pages.thread.index.addbutton}</span>
                    </t:pageLink>
                </t:if>
                </li>
            </ul>
        </div><!-- id="actionBar" -->

        <!-- Page content -->
		<h2> ${message:pages.thread.admin.index.title}</h2>
        <div id="pageContent">
               	<fieldset  class="title_criteria_zone" id="userCriterion">
				<legend align="top" class="palette">${message:global.button.search}</legend>	
        		<table>
					<tr>
					<form t:type="form" t:id="formSearch">
						<td>
							<t:textfield t:id="searchThread"  t:validate="required" t:value="recipientsSearchThread" t:size="50"
				    		class="recipientsPattern"
				    		title="${message:components.quickSharePopup.texarea.recipients.title}"/>
				    	</td>
				    	<td>
        					<input type="submit" id="submit" value="${message:global.button.search}"/>
        				</td>
        				</form>
        				<td>
        				 	<form t:type="form" t:id="resetSearch">
        						<input type="submit" id="stop" value="${message:global.button.reset}"/>
        					</form>
       					</td>
        			</tr>
        		</table>
        		<p>${message:pages.thread.admin.notification}</p>
        		</fieldset>
			<div class="clear"></div>
            <t:unless test="inSearch">
            	<h2> ${message:pages.thread.index.chronoMessage}</h2>
            </t:unless>
            <t:grid source="threads" row="currentThread" include="name, creationDate, modificationDate" add="countDocuments" rowsPerPage="10">
            
                <p:nameCell>
                    <t:actionlink t:id="showThreadContent" context="currentThread.lsUuid"> ${currentThread.name}</t:actionlink>
                </p:nameCell>
                <p:modificationDateCell>
                    <span class="modificationDate">${modificationDate}</span>
                </p:modificationDateCell>
                <p:creationDateCell>
                    <span class="creationDate">${creationDate}</span>
                </p:creationDateCell>
                <p:countDocumentsCell>
                    <span class="countDocuments" style="text-align : center;">${countDocuments}</span>
                </p:countDocumentsCell>
                <p:empty>
                    ${message:pages.thread.empty}
                </p:empty>
            </t:grid>
        </div>

    </div><!-- id="content" -->

    <!-- Popups -->


    <!-- Widgets -->

</t:MyBorderLayout>
